/* pages/index/year-tax/index.wxss */
page{
  padding: 20rpx;
  width: 710rpx;
}

/* 表格 */
.history-table-wrap, .salary-table-wrap{
  width: 710rpx;
  overflow-y: scroll;
  overflow-x: hidden;
  border-radius: 8rpx;
  overflow: hidden;
}
/* 表格代码   */
.table{
  border:1px solid #dadada;
  border-right:0;
  border-bottom: 0;

}
.tr{
  display: flex;
  justify-content: space-between;
}
.th,.td{
  padding: 20rpx;
  border-bottom: 1px solid #dadada;
  border-right: 1px solid #dadada;
  text-align: center;
  width: 100%;
}

.salary-table-wrap .th1, .salary-table-wrap .td1{
  width: 160rpx;
}

.old_tax{
  font-size: 20rpx;
  color: #bbb;
}


.th{
  font-weight: 800;
  background-color: #b66242;
  font-size: 28rpx;
  color: white;
  text-align: center;
}
.td{
  font-size: 26rpx;
  color: #ec9480;
}


/* 顶部标题 */
.salary{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
  box-shadow:0px 30rpx 40rpx 50rpx #ec9480  inset;
  border-radius: 8rpx;
}

.salary_desc{
  font-size: 40rpx;
  color: #666;
}

.salary_detail{
  font-size: 80rpx;
  color: #ec9480;
}

.salary_sub_desc{
  font-size: 26rpx;
  color: #666;
}